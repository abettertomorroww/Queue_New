@model GasColumn

<div class="modal fade" id="addEntry">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header-1">
                <h4 id="addEntryLabel" style="margin-top: -0.7rem; line-height: 1.5;">Отменить запись</h4>
                <button type="button" class="close" data-dismiss="modal" style="padding: 1rem 1rem; margin:-1.3rem -1rem -1rem auto">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body-2">
                <form action="SingOutGlobal" method="post">
                    <div class="form-group" style="margin-bottom: 0rem; margin-top: -1rem; font-size: 1.1rem;">
                        <label asp-for="Code">Введите код регистрации, чтобы отменить запись</label>
                        <input class="form-controll-user" asp-for="Code" value="" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="modal-footer-1"> 
                        <input type="submit" class="modalBtn1" value="Подтвердить" asp-route-code="@Model.Code"/>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>